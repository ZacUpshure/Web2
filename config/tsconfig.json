{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "..",                          // Projekt-Root, da kein /src existiert
    "outDir": "../dist",                      // Ausgabe in dist/
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["../**/*.ts"],                  // Alle TS-Dateien im Projekt (au√üer dist/node_modules)
  "exclude": ["../node_modules", "../dist"]
}


